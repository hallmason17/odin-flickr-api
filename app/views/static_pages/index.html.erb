<% if params[:user_id].nil? %>
  <div class="d-flex align-items-center flex-column">
    <%= render 'search_form' %>
<% else %>
  <div class="d-flex align-items-center flex-column">
    <%= render 'search_form' %>
  </div>
  <div class="row justify-content-md-center">
    <% @photos.each do |photo| %>
      <div class="col-md-auto">
        <img src="<%=Flickr.url_n(photo) %>"/>
      </div>
    <% end %>
  </div>
  <% end %>
